<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yunjingliu.tutorial.UserareaActivity">


    <TextView
        android:id="@+id/tvTest"
        android:layout_width="345dp"
        android:layout_height="46dp"
        android:text="Help us to get more information of youself! Start your journey!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="17dp" />

    <Button
        android:id="@+id/addNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="16dp"
        android:onClick="addNew"
        android:text="@string/action_add_new"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/skipthis"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/skipthis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="16dp"
        android:onClick="skipToSearch"
        android:text="@string/action_skip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/addNew" />

    <ListView
        android:id="@+id/lvSessionList"
        android:layout_width="0dp"
        android:layout_height="352dp"
        android:layout_marginBottom="88dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btAppliedSession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Applied"
        android:onClick="checkSessionApplied"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="431dp" />

    <Button
        android:id="@+id/btMsg"
        android:layout_width="144dp"
        android:layout_height="62dp"
        android:layout_marginBottom="15dp"
        android:onClick="checkMsg"
        android:text="CHECK YOUR MESSAGE"
        app:layout_constraintBottom_toTopOf="@+id/tvTest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tvTest"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>
