<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvSDdetail"
        android:layout_width="614dp"
        android:layout_height="33dp"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="34dp"
        android:text="Here are all the sessions you have applied:"
        app:layout_constraintBottom_toTopOf="@+id/lvSessionPosted"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lvSessionPosted"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSDdetail" />
</android.support.constraint.ConstraintLayout>